#compdef penv

local curcontext="$curcontext" environ e
local -a args

zstyle -a ":completion:${curcontext}:" environ environ

for e in "${environ[@]}"; do
    local -x "$e"
done

args=(
	  '*-P[absolute path]:abs. path:_files'
	  '*-p[relative path from /src/install]:rel. path:_files -W /src/install'
)

_arguments $args \
           '(-):command: _command_names -e' \
           '*::arguments: _normal'
